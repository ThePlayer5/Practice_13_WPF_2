<Window x:Class="Practice_13_WPF_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_13_WPF_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#3d3e40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="3"
              Width="330"
              Height="25"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Padding="10 0 0 0"
              Foreground="White"
              Background="#3d3e40"
              FontSize="15">
            <MenuItem Header="File"/>
            <MenuItem Header="Notifications"/>
            <MenuItem Header="Status"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Customer"/>
        </Menu>
        <StackPanel Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="10 0 0 0">
            <TextBlock Text="Customer Search"
                       Foreground="White"
                       FontSize="25"/>
            <TextBlock Text="Edit Customer"
                       Foreground="White"
                       FontSize="25"
                       Margin="20 0 0 0"
                       >
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="0"
                                      Color="White"
                                      Opacity="1"
                                      BlurRadius="10"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="7"
                    Background="#4c4d4f"
                    Height="40"
                    Orientation="Horizontal"
                    
                    VerticalAlignment="Center">
            <TextBlock Text="Save Data"
                       Background="#818284"
                       Width="90"
                       Height="25"
                       FontSize="15"
                       Padding="5 0 0 0"
                       Foreground="White"
                       Margin="0 0 10 0"/>
            <TextBlock Text="Close"
                       Background="#818284"
                       Width="90"
                       Height="25"
                       FontSize="15"
                       Padding="5 0 0 0"
                       Foreground="White"/>


        </StackPanel>
    </Grid>
</Window>
