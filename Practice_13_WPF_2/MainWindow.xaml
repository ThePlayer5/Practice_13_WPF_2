<Window x:Class="Practice_13_WPF_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_13_WPF_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="#3d3e40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="3"
              Width="330"
              Height="25"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Padding="10 0 0 0"
              Foreground="White"
              Background="#3d3e40"
              FontSize="15">
            <MenuItem Header="File"/>
            <MenuItem Header="Notifications"/>
            <MenuItem Header="Status"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Customer"/>
        </Menu>
        <StackPanel Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="10 0 0 0">
            <TextBlock Text="Customer Search"
                       Foreground="White"
                       FontSize="25"/>
            <TextBlock Text="Edit Customer"
                       Foreground="White"
                       FontSize="25"
                       Margin="20 0 0 0"
                       >
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="0"
                                      Color="White"
                                      Opacity="1"
                                      BlurRadius="10"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="7"
                    Background="#4c4d4f"
                    Height="40"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0 0 0 5">
            <Button Content="Save Data"
                    Background="#818284"
                    Width="100"
                    Height="30"
                    FontSize="15"
                    Foreground="White"
                    Padding="0 0 0 2"
                    Margin="560 0 10 0"/>
            <Button Content="Close"
                    Background="#818284"
                    Width="100"
                    Height="30"
                    FontSize="15"
                    Padding="0 0 30 2"
                    Foreground="White"/>
        </StackPanel>
        <Grid Grid.Row="3"
              Grid.ColumnSpan="7"
              Grid.RowSpan="7"
              Background="#494a4c">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="First Name:"
                       Foreground="White"
                       FontSize="16"
                       VerticalAlignment="Bottom"
                       Padding="25 0 0 0"/>
            <TextBox Background="#353638"
                     Foreground="White"
                     FontSize="16"
                     Width="250"
                     Height="35"
                     Padding="0 10 0 0"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"/>
            <TextBlock Text="Last Name:"
                       Foreground="White"
                       FontSize="16"
                       Grid.Row="1"
                       VerticalAlignment="Bottom"
                       Padding="25 0 0 0"/>
            <TextBox Background="#353638"
                     Foreground="White"
                     FontSize="16"
                     Width="250"
                     Height="35"
                     Grid.Row="1"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Padding="0 10 0 0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"/>
            <TextBlock Text="Company Name:"
                       Foreground="White"
                       FontSize="16"
                       Grid.Row="2"
                       VerticalAlignment="Bottom"
                       Padding="25 0 0 0"/>
            <TextBox Background="#353638"
                     Foreground="White"
                     FontSize="16"
                     Width="250"
                     Height="35"
                     Grid.Row="2"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Padding="0 10 0 0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"/>
            <TextBlock Text="Division:"
                       Foreground="White"
                       FontSize="16"
                       Grid.Row="3"
                       VerticalAlignment="Bottom"
                       Padding="25 0 0 0"/>
            <TextBox Background="#353638"
                     Foreground="White"
                     FontSize="16"
                     Width="250"
                     Height="35"
                     Grid.Row="3"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Padding="0 10 0 0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"/>
            <TextBlock Text="Phone Numbers"
                       FontSize="16"
                       Grid.Row="4"
                       VerticalAlignment="Bottom"
                       Padding="20 0 0 5"
                       FontWeight="Bold"/>
            <TextBlock Text="Phone:"
                       Foreground="White"
                       FontSize="16"
                       Grid.Row="5"
                       VerticalAlignment="Bottom"
                       Padding="25 0 0 0"/>
            <TextBox Background="#353638"
                     Foreground="White"
                     FontSize="16"
                     Width="250"
                     Height="35"
                     Grid.Row="5"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Padding="0 10 0 0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"/>
            <TextBlock Text="Fax:"
                       Foreground="White"
                       FontSize="16"
                       Grid.Row="6"
                       VerticalAlignment="Bottom"
                       Padding="25 0 0 0"/>
            <TextBox Background="#353638"
                     Foreground="White"
                     FontSize="16"
                     Width="250"
                     Height="35"
                     Grid.Row="6"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Padding="0 10 0 0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>
